<?xml version="1.0"?>
<scene name="Simple scene">

  <!-- Initial camera position -->
  <camera type="perspective" fov="50.0">
    <position x="0.0" y="0.5" z="2.0"/>
    <target   x="0.0" y="0.0" z="0.0"/>
    <up       x="0.0" y="1.0" z="0.0"/>
  </camera>

  <materials>
    <material name="dull" shader="phong">
      <texture file="brick1.jpg"/>
      <shininess value="600"/>
    </material>
  </materials>
  
  <lights>
    <light type="spot" cutoff="60" exponent="5">
      <position x="0.0" y="1.0" z="2.0"/>
      <direction x="0.0" y="-1.0" z="-2.0"/>
      <color r="1.0" g="1.0" b="1.0"/>
    </light>
    <light type="spot" cutoff="60" exponent="5">
      <position x="0.0" y="0.0" z="-2.0"/>
      <direction x="0.0" y="0.0" z="2.0"/>
      <color r="1.0" g="1.0" b="1.0"/>
    </light>
  </lights>

 <objects>
   
  <box material="dull"/>

  </objects>
   
</scene>
