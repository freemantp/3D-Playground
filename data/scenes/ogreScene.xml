<?xml version="1.0"?>
<scene name="Ogre scene">

  <!-- Initial camera position -->
  <camera type="perspective" fov="50.0">
    <position x="0.0" y="1.0" z="4.0"/>
    <target   x="0.0" y="0.0" z="0.0"/>
    <up       x="0.0" y="1.0" z="0.0"/>
  </camera>

  <materials>
    <!-- shiny material -->
    <material name="glossy" shader="phong">
      <texture file="ogre/ogre_diffuse.png"/>
      <bumpMap file="ogre/ogre_normalmap.png" type="normal"/>
      <shininess value="5"/>
    </material>
  </materials>
  
  <lights>
    <light type="point" cutoff="20" exponent="5">
      <position x="0.0" y="4.0" z="4.0"/>
      <direction x="0.0" y="-1.0" z="-1.0"/>
      <color r="1.0" g="1.0" b="1.0"/>
    </light>
  </lights>

 <objects>
 
    <mesh file="ogre/ogre.obj" material="glossy">
      <position x="0" y="0" z="0"/>
      <transform>
        <translate x="0.0" y="0.55" z="0.0"/>
        <scale x="2.0" y="2.0" z="2.0"/>
      </transform>
    </mesh>
 </objects>
</scene>
