<?xml version="1.0"?>
<scene name="Simple scene">

  <!-- Initial camera position -->
  <camera type="perspective" fov="50.0">
    <position x="0.0" y="0.0" z="2.0"/>
    <target   x="0.0" y="0.0" z="0.0"/>
    <up       x="0.0" y="1.0" z="0.0"/>
  </camera>

  <materials>
    <!-- shiny material -->
    <material name="glossy" shader="phong">
      <ambientReflect r="0.0" g="0.0" b="0.0"/>
      <diffuseReflect r="0.8" g="0.3" b="0.3"/>
      <glossyReflect r="0.9" g="0.2" b="0.1"/>
      <shininess value="2"/>
    </material>
    <!-- diffuse material -->
    <material name="dull" shader="phong">
      <ambientReflect r="0.0" g="0.00" b="0.0"/>
      <diffuseReflect r="1.0" g="1.0" b="1.0"/>
      <glossyReflect r="0.0" g="0.0" b="0.0"/>
      <shininess value="90"/>
    </material>
  </materials>
  
  <lights>

    <light type="directional">
      <direction x="-1.0" y="-0.5" z="-1.0"/>
      <color r="1.0" g="1.0" b="0.0"/>
    </light>
    
    <light type="spot" cutoff="60" exponent="5">
      <position x="1.0" y="0.5" z="1.0"/>
      <direction x="-1.0" y="-0.5" z="-1.0"/>
      <color r="1.0" g="1.0" b="1.0"/>
    </light>
  </lights>

 <objects>
     <mesh file="horse.obj" material="glossy">
      <position x="0" y="0" z="0"/>
      <transform>
        <translate x="0.0" y="-0.31" z="0.0"/>
        <rotate angle="270.0" x="0.0" y="1.0" z="0.0"/>
      </transform>
    </mesh>
   
    <box material="dull">
      <transform>
        <translate x="0.0" y="-0.3" z="0.0"/>   
        <scale x="100.0" y="0.01" z="100.0"/>
      </transform>
    </box>
  </objects>
   
</scene>
