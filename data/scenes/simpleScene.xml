<?xml version="1.0"?>
<scene name="Simple scene">

  <camera type="perspective" fov="50.0">
    <position x="0.0" y="0.0" z="2.0"/>
    <target   x="0.0" y="0.0" z="0.0"/>
    <up       x="0.0" y="1.0" z="0.0"/>
  </camera>

  <materials>
    <material name="glossy" shader="PhongShader"/>
    <material name="dull" shader="DiffusePerVertexShader"/>
  </materials>
  
  <lights>
    <light type="point">
      <position x="1.0" y="0.0" z="3.0"/>
      <color r="1.0" g="1.0" b="1.9"/>
    </light>
  </lights>

  <objects>
    <mesh file="elephant.obj" material="glossy">
      <position x="0" y="0" z="0"/>
      <transform>
        <translate x="0.0" y="-0.3" z="0.0"/>
        <rotate angle="270.0" x="0.0" y="1.0" z="0.0"/>
      </transform>
    </mesh>
  </objects>
   
</scene>
