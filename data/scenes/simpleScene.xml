<?xml version="1.0"?>
<scene name="Simple scene">

  <camera type="perspective" fov="50.0">
    <position x="0.0" y="0.0" z="2.0"/>
    <target   x="0.0" y="0.0" z="0.0"/>
    <up       x="0.0" y="1.0" z="0.0"/>
  </camera>

  <materials>
    <material name="glossyRed" shader="PhongShader">
      <ambientReflect r="0.0" g="0.0" b="0.0"/>
      <diffuseReflect r="0.0" g="0.0" b="0.0"/>
      <glossyReflect r="1.0" g="0.0" b="0.0"/>
      <shininess value="2"/>
    </material>
    <material name="dull" shader="DiffusePerVertexShader">
      <color r="1.0" g="0.0" b="1.0"/>
    </material>
    <material name="constRed" shader="ColorShader"/>
  </materials>
  
  <lights>
    <light type="point">
      <position x="1.0" y="0.0" z="3.0"/>
      <color r="1.0" g="1.0" b="1.0"/>
    </light>
  </lights>

  <objects>
    <mesh file="horse.obj" material="glossyRed">
      <position x="0" y="0" z="0"/>
      <transform>
        <translate x="0.0" y="-0.3" z="0.0"/>
        <rotate angle="270.0" x="0.0" y="1.0" z="0.0"/>
      </transform>
    </mesh>
    
    <box material="constRed">
      <transform>
        <translate x="0.0" y="-0.29" z="0.0"/>   
        <scale x="5.0" y="0.01" z="5.0"/>
        <translate x="-0.5" y="-0.5" z="-0.5"/>
      </transform>
    </box>
  </objects>
   
</scene>
