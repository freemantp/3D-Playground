<?xml version="1.0"?>
<scene name="Simple scene">

  <camera type="perspective" fov="50.0">
    <position x="0.0" y="0.0" z="2.0"/>
    <target   x="0.0" y="0.0" z="0.0"/>
    <up       x="0.0" y="1.0" z="0.0"/>
  </camera>

  <materials>
    <material name="glossyRed" shader="PhongShader">
      <ambientReflect r="0.0" g="0.0" b="0.0"/>
      <diffuseReflect r="0.3" g="0.3" b="0.3"/>
      <glossyReflect r="0.9" g="0.9" b="0.9"/>
      <shininess value="90"/>
    </material>
    <material name="dull" shader="DiffuseShader">
      <color r="1.0" g="1.0" b="1.0"/>
    </material>
    <material name="meshColors" shader="ColorShader"/>
  </materials>
  
  <lights>
    <light type="point">
      <position x="1.0" y="0.5" z="1.0"/>
      <color r="1.0" g="0.0" b="0.0"/>
    </light>
    <light type="point">
      <position x="-1.0" y="1.0" z="0.0"/>
      <color r="0.0" g="0.0" b="1.0"/>
    </light>
    <!--<light type="point">
      <position x="0.0" y="0.5" z="1.0"/>
      <color r="0.5" g="0.5" b="0.5"/>
    </light>-->
  </lights>

 <objects>
    <mesh file="horse.obj" material="glossyRed">
      <position x="0" y="0" z="0"/>
      <transform>
        <translate x="0.0" y="-0.3" z="0.0"/>
        <rotate angle="270.0" x="0.0" y="1.0" z="0.0"/>
      </transform>
    </mesh>
    
    <!--<mesh file="dragon.obj" material="glossyRed">
      <position x="0" y="0" z="0"/>
      <transform>
        <translate x="0.0" y="-0.75" z="0.0"/>
        <scale x="10.0" y="10.0" z="10.0"/>
      </transform>
    </mesh>-->
   
    <box material="dull">
      <transform>
        <translate x="0.0" y="-0.3" z="0.0"/>   
        <scale x="20.0" y="0.01" z="20.0"/>
        <translate x="-0.5" y="-0.5" z="-0.5"/>
      </transform>
    </box>
  </objects>
   
</scene>
