<?xml version="1.0"?>
<scene name="Simple scene">

  <!-- initial camera position -->
  <camera type="perspective" fov="50.0">
    <position x="0.0" y="1.0" z="4.0"/>
    <target   x="0.0" y="0.0" z="0.0"/>
    <up       x="0.0" y="1.0" z="0.0"/>
  </camera>

  <materials>

    <material name="rockBump" shader="phong">
      <texture file="rock/rock_texture.tga"/>
      <normalMap file="rock/rock_normal.tga"/>
      <shininess value="5"/>
    </material>
    
    <material name="rock" shader="phong">
      <texture file="rock/rock_texture.tga"/>
      <shininess value="0"/>
    </material>    
    
  </materials>
  
  <lights>
    <light type="point" cutoff="60" exponent="5">
      <position x="0.0" y="1.0" z="1.0"/>
      <direction x="0.0" y="-1.0" z="-1.0"/>
      <color r="1.0" g="1.0" b="1.0"/>
    </light>
  </lights>

 <objects>
  <mesh file="rectangle.obj" material="rockBump">
    <transform>
      <translate x="1.0" y="0.0" z="-1.0"/>
      <rotate angle="-90.0" x="1.0" y="0.0" z="0.0"/>
    </transform>
  </mesh>
  
    <mesh file="rectangle.obj" material="rockBump">
    <transform>
      <translate x="-1.0" y="0.0" z="-1.0"/>
      <rotate angle="-90.0" x="1.0" y="0.0" z="0.0"/>
    </transform>
  </mesh>

   <mesh file="rectangle.obj" material="rockBump">
     <transform>
       <translate x="1.0" y="0.0" z="1.0"/>
       <rotate angle="-90.0" x="1.0" y="0.0" z="0.0"/>
     </transform>
   </mesh>

   <mesh file="rectangle.obj" material="rockBump">
     <transform>
       <translate x="-1.0" y="0.0" z="1.0"/>
       <rotate angle="-90.0" x="1.0" y="0.0" z="0.0"/>
     </transform>
   </mesh> 
 
    
 </objects>
</scene>
